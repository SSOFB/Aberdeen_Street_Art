<?xml version="1.0" encoding="utf-8"?>
<extension type="plugin" group="system" method="upgrade">
	<name>plg_system_saaconsole</name>
	<author>Andy Gaskell</author>
	<creationDate>January 2022</creationDate>
	<copyright>(C) Andy Gaskell</copyright>
	<license>GNU General Public License version 3 or later</license>
	<authorEmail>ag@ssofb.co.uk</authorEmail>
	<version>0.2.0</version>
	<description>PLG_SYSTEM_SAACONSOLE_DESCRIPTION</description>
	<namespace path="src">Joomla\Plugin\System\Saaconsole</namespace>
	<files>
		<filename plugin="saaconsole">saaconsole.php</filename>
		<folder>services</folder>
		<folder>src</folder>
	</files>
	<languages>
		<language tag="en-GB">language/en-GB/plg_system_saaconsole.ini</language>
		<language tag="en-GB">language/en-GB/plg_system_saaconsole.sys.ini</language>
	</languages>
	<config>
		<fields name="params">
			<fieldset name="basic">
				<field
					name="map_api_key"
					type="text"
					label="Google Maps API Key"
					default=""
				/>
				<field
					name="map_default_lat_lon"
					type="text"
					label="Default lat/lon from the location field"
					default="57.145428390778264,-2.0937312622943405"
				/>
			</fieldset>
		</fields>
	</config>
</extension>